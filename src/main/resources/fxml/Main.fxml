<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>

<!--Created by Manuel Perez on 25/10/2016-->

<BorderPane fx:controller="org.darkestapp.colorin.structure.controllers.MainController" fx:id="mainView" xmlns:fx="http://javafx.com/fxml" >
    <padding>
        <Insets top="15" right="10" bottom="10" left="15"/>
    </padding>
    <!--In this fxml we build the main layout, please, use this file only to call another containers built in different
    fxml files. Please, not include your containers here. Thank you.
    -->
    <!--Main Top-->
    <top>
        <fx:include fx:id="mainTop" source="MainTop.fxml"/>
    </top>
    <!--Main Tab Pane-->
    <center>
        <fx:include fx:id="drawArea" source="DrawArea.fxml"/>
    </center>
    <!--Main Bottom-->
    <bottom>
        <fx:include fx:id="mainBottom" source="MainBottom.fxml" />
    </bottom>
</BorderPane>